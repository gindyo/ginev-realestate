!!!
%html
  %head
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Ginev"
      %meta{:content => content_for?(:description) ? yield(:description) : "Ginev", :name => "description"}
        = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato:300,400,700|Cinzel+Decorative:400,700|Ubuntu:500'
        = stylesheet_link_tag "/assets/application", :media => "all"
        = stylesheet_link_tag "/assets/#{params[:controller]}/#{params[:action]}"
        = javascript_include_tag "/assets/application"
        = javascript_include_tag "/assets/#{params[:controller]}"
        = csrf_meta_tags
        = yield(:head)
     
  %body{:class => "#{controller_name} #{action_name}"}
    #top-navigation.container
      = render 'layouts/navigation'
    #main{:role => "main"}
      =content_for :carousel
      .container
        .content
          = render 'layouts/messages'
          = yield
.footer
     